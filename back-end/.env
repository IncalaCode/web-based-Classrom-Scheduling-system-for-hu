# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRATION=2h

# Database Configuration
DB_USERNAME=root
DB_PASSWORD=
DB_NAME=Classroom
DB_HOST=localhost
DB_PORT=3306
DB_DIALECT=mysql

# Migration Settings
FORCE_MIGRATION=false # Set to true only if you want to force database migrations on server startup every time when it start up 

# Logging
LOG_LEVEL=info # Options: error, warn, info, http, verbose, debug, silly

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=50242880 # 50MB in bytes

# Email Configuration (if needed)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@school-system.com